<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:id="@+id/imgAvatarApply"
            android:src="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.wayupmanagement.view.CusBoldTextView
                android:text="@string/email"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:lines="2"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:id="@+id/tvNameApply"
                style="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <com.example.wayupmanagement.view.CusRegularTextView
        android:text="@string/email"
        android:layout_marginLeft="25dp"
        android:id="@+id/tvEmailApply"
        style="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.example.wayupmanagement.view.CusRegularTextView
        android:text="@string/email"
        android:layout_marginLeft="25dp"
        android:id="@+id/tvStatusApply"
        style="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.example.wayupmanagement.view.CusRegularTextView
        android:text="@string/email"
        android:layout_gravity="right"
        android:layout_marginRight="25dp"
        android:id="@+id/tvTimeApply"
        style="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:background="#E0E0E0"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

</LinearLayout>