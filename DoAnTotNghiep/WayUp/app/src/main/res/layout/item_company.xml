<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/imThumbnail"
                android:src="@color/colorPrimary"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="150dp" />
            <ImageView
                android:id="@+id/imLogoItemCompany"
                android:layout_marginLeft="20dp"
                android:background="@color/white"
                android:layout_gravity="bottom"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <com.example.wayup.view.CusBoldTextView
                android:layout_width="wrap_content"
                android:id="@+id/tvNameItemCompany"
                android:text="@string/company"
                android:layout_gravity="bottom"
                android:lines="1"
                android:layout_marginLeft="110dp"
                style="?android:attr/textAppearanceMedium"
                android:layout_height="wrap_content" />
        </FrameLayout>
        <com.example.wayup.view.CusRegularTextView
            android:id="@+id/tvSmallInfoItemCompany"
            android:layout_width="wrap_content"
            android:padding="10dp"
            style="?android:attr/textAppearanceSmall"
            android:text="sssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssss"
            android:layout_height="wrap_content" />
    </LinearLayout>

</android.support.v7.widget.CardView>