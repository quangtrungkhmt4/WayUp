<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.wayup.view.CusBoldTextView
            android:id="@+id/tvTitleJobApplied"
            style="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:text="@string/name"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />

        <com.example.wayup.view.CusRegularTextView
            android:id="@+id/tvEmailJobApplied"
            android:text="@string/name"
            android:padding="5dp"
            android:layout_marginLeft="25dp"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.example.wayup.view.CusRegularTextView
            android:id="@+id/tvStatusJobApplied"
            android:text="@string/name"
            android:padding="5dp"
            android:layout_marginLeft="25dp"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.example.wayup.view.CusRegularTextView
            android:layout_gravity="right"
            android:id="@+id/tvTimeJobApplied"
            android:text="@string/name"
            android:padding="5dp"
            android:layout_marginRight="25dp"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</android.support.v7.widget.CardView>